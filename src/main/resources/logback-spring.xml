<configuration>
    <!-- 공통 변수 -->
    <property name="LOG_DIR" value="${LOG_PATH:-logs}"/>
    <property name="SERVER_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
    <property name="ACCESS_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} INFO [trace=%X{traceId:-} user=%X{userId:-}] %msg%n"/>
    <property name="SQL_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId:-}] %-5level %msg%n"/>

    <!-- 콘솔 (선택) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>${SERVER_PATTERN}</pattern></encoder>
    </appender>

    <!-- 서버/프레임워크 로그 파일 -->
    <appender name="SERVER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/server.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder><pattern>${SERVER_PATTERN}</pattern></encoder>
    </appender>

    <!-- API 접근 로그 파일 -->
    <appender name="API_ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/access-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/access-api.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder><pattern>${ACCESS_PATTERN}</pattern></encoder>
    </appender>

    <!-- WS 접근 로그 파일 -->
    <appender name="WS_ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/access-ws.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/access-ws.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder><pattern>${ACCESS_PATTERN}</pattern></encoder>
    </appender>

    <!-- SQL 로그 파일 (p6spy) -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/sql.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder><pattern>${SQL_PATTERN}</pattern></encoder>
    </appender>

    <!-- ROOT: 서버/프레임워크 로그 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SERVER_FILE"/>
    </root>

    <!-- 프레임워크 소음 줄이기 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.springframework.data" level="WARN"/>

    <!-- API 접근 로그 -->
    <logger name="com.example.planmate.common.log.AccessLogInterceptor" level="INFO" additivity="false">
        <appender-ref ref="API_ACCESS_FILE"/>
    </logger>

    <!-- WS 접근 로그 -->
    <logger name="com.example.planmate.common.log.ws.WsAccessLogInterceptor" level="INFO" additivity="false">
        <appender-ref ref="WS_ACCESS_FILE"/>
    </logger>

    <!-- p6spy SQL 로그 -->
    <logger name="p6spy" level="DEBUG" additivity="false">
        <appender-ref ref="SQL_FILE"/>
    </logger>
</configuration>

